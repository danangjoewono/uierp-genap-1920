<odoo>
    <record id="po_extend_view_inherit" model="ir.ui.view">
        <field name="name">po.extend.view.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_planned']" position="after">
                <field name="date_cancelled" attrs="{'readonly': ['|', ('id', '=', False), ('state', 'not in', ('draft', 'sent'))]}"/>
            </xpath>
        </field>
    </record>
</odoo>